# Database (Docker)
# IMPORTANT: Generate a strong password for production!
# Use: openssl rand -base64 32 | tr -d '/+='
POSTGRES_USER=clawnet
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=clawnet
POSTGRES_PORT=5432

# Prisma (update password to match POSTGRES_PASSWORD)
DATABASE_URL="postgresql://clawnet:CHANGE_ME_USE_STRONG_PASSWORD@localhost:5432/clawnet"

# API (localhost only - not publicly exposed)
API_PORT=3001
API_HOST=127.0.0.1

# Web (internal API URL - same machine)
NEXT_PUBLIC_API_URL=http://127.0.0.1:3001

# Twitter/X OAuth (for agent verification)
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
